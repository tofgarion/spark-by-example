project Spark_By_Example_Shared is

  for Source_Dirs use ();

  package Compiler is
    for Default_Switches ("Ada") use ("-gnat12", "-gnato13", "-gnata");
    for Local_Configuration_Pragmas use "noassert.adc";
  end Compiler;

  package Prove is
    for Proof_Switches ("Ada") use ("--mode=prove",
                                    "--report=fail",
                                    "--proof=per_check",
                                    "--warnings=continue");
  end Prove;

end Spark_By_Example_Shared;
